{% extends 'base.html.twig' %}

{% block title %}Irrigation Connectee{% endblock %}

{% block stylesheets %}
	
{% endblock %}

{% block body %}

	<!-- ********************************************** Style  files ************************************************** -->
    <link rel="stylesheet" href="{{ asset('css/roles/technician/sb-admin-2.css')}}">
	<link rel="stylesheet" href="{{ asset('css/roles/technician/technician2.css')}}">
	<link rel="stylesheet" href="{{ asset('css/librairies/openlayer.css')}}">
    <link rel="stylesheet" href="{{ asset('css/map.css')}}">
	<!-- ************************************************************************************************************** -->

    <!-- Page Wrapper -->
    <div id="wrapper">
        {% include "roles/technician/_elements/_navbar.html.twig" %}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                {% include "roles/technician/_elements/_topbar.html.twig" %}
                <!-- Begin Page Content -->
                <div id="DashboardPageContent" class="container-fluid TechnicianLightInterface">
                    <!-- Content Row -->
                    <div class="row">

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="shadow h-100 py-2 TechnicianLightElementsInterface">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold  text-uppercase mb-1">
                                        Parcelles</div>
                                    <div class="h5 mb-0 font-weight-bold">12</div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="shadow h-100 py-2 TechnicianLightElementsInterface">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold  text-uppercase mb-1">
                                        Vannes fermees</div>
                                    <div class="h5 mb-0 font-weight-bold">1</div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="shadow h-100 py-2 TechnicianLightElementsInterface">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold  text-uppercase mb-1">
                                        Vannes ouvertes</div>
                                    <div class="h5 mb-0 font-weight-bold">2</div>
                                </div>
                            </div>
                        </div>

                        <!-- Pending Requests Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="shadow h-100 py-2 TechnicianLightElementsInterface">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold  text-uppercase mb-1">
                                        Cartes</div>
                                    <div class="h5 mb-0 font-weight-bold">9</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Content Row -->

                    <div class="row">

                        <!-- Area Chart -->
                        <div class="col-xl-12 col-lg-7">
                            <!-- Card Header - Dropdown -->
                            <div class="elemHeader TechnicianLightElementsInterface">
                                <h5 class="m-0 font-weight-bold TechnicianLightElementsInterface">Visualisation des parcelles</h5>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="row content TechnicianLightElementsInterface">
                                    <select id="layer-select" class="TechnicianLightElementsInterface">
                                        <option value="">Carte Classique</option>
                                        <option value="AerialWithLabelsOnDemand" selected>Carte Aerienne</option>
                                        <option value="RoadOnDemand">Carte Routes</option>
                                        <option value="CanvasDark">Carte Routes Sombre</option>
                                    </select>   
                                </div>
                                <div class="row">
                                    <section id="MAP" class="map">
                                        <div id="mapTech" class="map"></div> 
                                    </section> 
                                </div>
                                <div class="col-12">
                                    <div class="elemHeader TechnicianLightElementsInterface">
                                    	<h5 class="font-weight-bold TechnicianLightElementsInterface">Visualisation des donnees instantannées</h5>
                                	</div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="row">
                                                <h3>Humidité</h3>
                                                <div class="col">
                                                    <h3>Air <span id="AirHumidityValue"></span>%</h3>
                                                    <canvas id="AirHumidity" width="300px" height="300px"></canvas>
                                                </div>
                                                <div class="col">
                                                    <h3>Sol <span id="FloorHumidityValue"></span>%</h3>
                                                    <canvas id="FloorHumidity" width="300px" height="300px"></canvas>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <h3>Température</h3>
                                                <div class="col">
                                                    <h3>Air <span id="AirTemperatureValue"></span>°C</h3>
                                                    <canvas id="AirTemperature" width="100px" height="400px"></canvas>
                                                </div>
                                                <div class="col">
                                                    <h3>Sol <span id="FloorTemperatureValue"></span>°C</h3>
                                                    <canvas id="FloorTemperature" width="100px" height="400px"></canvas>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            	</div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

  	<!-- ********************************************** Script files ************************************************** -->
    <script src="{{ asset('js/libraries/jquery.min.js')}}"></script>
	<script src="{{ asset('js/libraries/charts/rGraph/rGraph.gauge.js')}}"></script>
    <script src="{{ asset('js/libraries/charts/rGraph/rGraph.thermometer.js')}}"></script>
    <script src="{{ asset('js/roles/technician/charts.js')}}"></script>
    <script src="{{ asset('js/libraries/bootstrap.bundle.min.js')}}"></script>
	<script src="{{ asset('js/libraries/maps/openlayer.js')}}"></script>
    <script src="{{ asset('js/roles/technician/map.js')}}"></script>
